<h1>Listing sessions</h1>

<table>
  <tr>
    <th>Start time</th>
    <th>End time</th>
    <th>Event ID</th>
    <th>Course Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sessions.each do |session| %>
  <tr>
    <td><%= session.start_time.to_formatted_s(:short) %></td>
    <td><%= session.end_time.to_formatted_s(:short) %></td>
    <td><%= session.event_id %></td>
    <td><%#= session.event.course.name %></td>
    <td><%= link_to 'Show', session %></td>
    <td><%= link_to 'Edit', edit_session_path(session) %></td>
    <td><%= link_to 'Destroy', session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

